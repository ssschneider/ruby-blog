<%= form_with model:post, html: { class: "form-wrapper" } do |form| %>
  <div class="form-item">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, value: post.title, placeholder:"Ex: Spring Break Details", class: "form-input" %>
  </div>

  <div class="form-item">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_field :description, value: post.description, placeholder:"My break was awesome! I went to...", class: "form-input" %>
  </div>

  <div class="form-item">
    <span class="form-label">Image (optional)</span>
    <%= form.label :image, class: "form-file-upload" %>
    <%= form.file_field :image %>
  </div>

  <%= form.submit "Save", class: "button" %>
<% end %>