<div>
  <%= image_tag(post.image.attached? ? url_for(post.image) : image_path("fallback.png")) %>

  <h2><%= post.title %></h2>
  <h2><%= post.description %></h2>
  <p> Postado por <%= post.user.email %></p>
  <p> última atualização: <%= post.updated_at %></p>
  <hr/>

  <% if post.user.id == current_user.id %>
    <%= link_to "Editar Post", edit_post_path(post) %>
    <%= button_to "Excluir Post", post, method: :delete %>
  <% end %>

  <div class="comments">
  <h4>Comments</h4>
  <%= render post.comments %>
</div>


  <%= form_with model: [post, Comment.new], local: true do |form| %>
    <%= form.text_area :content, placeholder: "Add a comment..." %>
    <%= form.submit "Comment" %>
  <% end %>


</div>