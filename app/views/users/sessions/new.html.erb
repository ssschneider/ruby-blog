<div class="home-wrapper">
  <header class="home-header">
      <h1 class="home-title">Sign In</h1>
  </header>

  <section class="form-wrapper">
    <%= form_for(resource, as: resource_name , html: { class: "form-wrapper", method: :post }, url: session_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-item">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="form-item">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "form-label" %>
        </div>
      <% end %>

      <%= f.submit "Sign In", class: "button" %>
    <% end %>

    <div class="actions links">
      <%= render partial: "users/shared/links" %>
    </div>
  </section>
</div>

